-- title:   Draw sector
-- author:  congusbongus
-- desc:    Draw a sector of a circle using a fan of triangles
-- site:    https://cxong.github.io/tic-80-examples/
-- license: CC0
-- version: 0.1
-- script:  moon
-- tags:    sector draw circle semi-circle fan triangle

sector = (x,y,dx,dy,iterations,dstart,dend,colors) ->
    d=2*math.pi/iterations
    -- The triangles are drawn from 3 o'clock, clockwise
    for i=dstart,iterations-1+dend
        color=colors[i%#colors+1]
        tri(x,y,
            x+math.cos(d*i)*dx,y+math.sin(d*i)*dy,
            x+math.cos(d*(i+1))*dx,y+math.sin(d*(i+1))*dy,
            color)

export TIC=->
    cls(0)

    -- tri-color circle (dstart=0, dend=0)
    sector(50,50,40,40,12,0,0,{5,6,7})
    -- lower-half ellipse (3 o'clock to 9 o'clock)
    sector(100,80,50,30,16,0,-8,{4})
    -- quarter ellipse (9 o'clock to 12 o'clock)
    sector(190,90,60,90,8,4,-2,{10,11})

